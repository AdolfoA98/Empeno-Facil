    </HBox>
    
    <HBox fx:id="imageView4Wrapper"
          GridPane.rowIndex="1"
          GridPane.columnIndex="3"
          maxWidth="80"
          maxHeight="80">
        
        <javafx.scene.image.ImageView fx:id="imageView4"
                                      fitWidth="80"
                                      fitHeight="80">
            <image>
                <javafx.scene.image.Image url="/mx/empenofacil/imagenes/default.png"/>
            </image>
        </javafx.scene.image.ImageView>
        
        <GridPane.margin>
            <javafx.geometry.Insets top="15" right="140" left="10" />
        </GridPane.margin>
    </HBox>
    
</GridPane>
