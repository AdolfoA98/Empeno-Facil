<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="450.0" spacing="10.0" type="VBox" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Nuevo registro de lista negra" />
      <HBox alignment="CENTER_LEFT" prefHeight="1.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Button fx:id="seleccionarBtn" mnemonicParsing="false" onAction="#seleccionar" text="Seleccionar cliente" />
            <Label text="Cliente:" />
            <Label fx:id="nombreCliente" text="Label" />
            <Label fx:id="idCliente" text="Label" />
         </children>
      </HBox>
      <HBox prefHeight="1.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Fecha:" />
            <Label fx:id="fecha" text="Label" />
            <Label text="(Hoy)" />
         </children>
      </HBox>
      <HBox prefHeight="1.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Empleado:" />
            <Label fx:id="nombreEmpleado" text="Label" />
            <Label text="(Usted)" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="1.0" prefWidth="200.0" spacing="10.0">
         <children>
            <Label text="Motivo:" />
            <TextField fx:id="motivo" promptText="Escriba el motivo" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="1.0" prefWidth="200.0" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Label fx:id="mensaje" text="Label" />
            <Button mnemonicParsing="false" onAction="#guardar" text="Guardar" />
            <Button mnemonicParsing="false" onAction="#cerrar" text="Cancelar" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
