<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<BorderPane fx:id="mainPane"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml/1">
    
    <center>
        <VBox>
            <Label text="Venta">
                <font>
                    <javafx.scene.text.Font name="Segoe UI Semilight" size="20.0" />
                </font>
            </Label>
            <StackPane VBox.vgrow="ALWAYS">
                <ListView fx:id="listaProductos"
                          minHeight="400"
                          minWidth="900"/>
                <ImageView fitWidth="280"
                           preserveRatio="true"
                           style="-fx-background-color:transparent">
                    <image>
                        <Image url="/mx/empenofacil/imagenes/tech.png"/>
                    </image>
                </ImageView>
            </StackPane>
            <BorderPane.margin>
                <javafx.geometry.Insets left="25" right="25" top="5" />   
            </BorderPane.margin>
        </VBox>
    </center>
    <bottom>
        <StackPane minHeight="60">
            <TextField fx:id="barcodeInput"
                       maxHeight="30"
                       maxWidth="700" />
        </StackPane>
    </bottom>
    
</BorderPane>
