<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <environments default="development">
        
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED" >
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://localhost/empenofacil?useSSL=true"/>
                <property name="username" value="proyProcessJ"/>
                <property name="password" value="proyProcessJ"/>
                <property name="poolMaximumActiveConnections" value="50"/>
            </dataSource>
        </environment>
        
    </environments>
    
    <mappers>
        <mapper resource="mx/empenofacil/mappers/Mapper.xml"/>
        <mapper resource="mx/empenofacil/mappers/MapperCliente.xml"/>
        <mapper resource="mx/empenofacil/mappers/MapperEmpleado.xml"/>
        <mapper resource="mx/empenofacil/mappers/MapperSession.xml"/>
    </mappers>
</configuration>